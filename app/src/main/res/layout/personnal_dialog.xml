<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fab="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <TextView
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adresse_non_disponible"
        android:layout_marginLeft="8dp"
        fab:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        fab:layout_constraintRight_toRightOf="parent"
        fab:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>


    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/velo_num"
                android:layout_marginRight="170dp"
                android:textSize="25dp"
                android:text="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>



            <TextView
                android:id="@+id/parking_num"
                android:textSize="25dp"
                android:text="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginRight="50dp"
            android:src="@drawable/ic_velo_num"
            android:layout_width="50dp"
            android:layout_height="50dp"/>


        <ImageView
            android:id="@+id/direction"
            android:src="@drawable/ic_directions"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <ImageView
            android:layout_marginLeft="50dp"
            android:src="@drawable/ic_parking"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/add_favoris"
            android:background="@drawable/color_button"
            android:text="@string/ajouter_vos_favoris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>